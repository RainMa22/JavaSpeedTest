<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/Layout">
    <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:visibility="visible" tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="78dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="160dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:onClick="speedTest"/>
    <TextView
            android:text="@string/hello"
            android:layout_width="272dp"
            android:layout_height="wrap_content" android:id="@+id/Status"
            android:visibility="visible" tools:visibility="visible"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="69dp" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="41dp" android:layout_marginEnd="70dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>